<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/margin_240dp"
        android:layout_height="@dimen/margin_432dp"
        android:src="@drawable/tomorrow"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_share_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:text="tips"
        android:textSize="@dimen/font_15"
        android:layout_above="@+id/v_share_divider1"
        android:gravity="center"
        android:background="@color/white"/>
    <View
        android:id="@+id/v_share_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"
        android:background="#FFEBEBEB"
        android:layout_above="@+id/tv_share_save"/>
    <TextView
        android:id="@+id/tv_share_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:text="保存"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_15"
        android:layout_above="@+id/v_share_divider"
        android:background="@color/white"/>
    <View
        android:id="@+id/v_share_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5dp"
        android:background="@color/cG2"
        android:layout_above="@+id/tv_share_cancel"/>
    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40dp"
        android:text="取消"
        android:textSize="@dimen/font_15"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>

</RelativeLayout>