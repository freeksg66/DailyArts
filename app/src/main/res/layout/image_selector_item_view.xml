<?xml version="1.0" encoding="utf-8"?>
<com.focus.pinge.widgets.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_item_ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@mipmap/image_selector_default_img" />

    <ImageView
        android:id="@+id/activity_item_ivDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@mipmap/image_selector_icon_delete" />

</com.focus.pinge.widgets.SquareFrameLayout>
