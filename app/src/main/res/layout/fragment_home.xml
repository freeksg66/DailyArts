<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">
    <com.github.dailyarts.ui.widget.AppActionBar
        android:id="@+id/mine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:text="更新"
        android:gravity="center"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_400dp"
        android:paddingLeft="@dimen/margin_40dp"
        android:paddingRight="@dimen/margin_40dp"
        android:clipToPadding="false"/>

</LinearLayout>