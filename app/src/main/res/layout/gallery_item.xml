<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHomeBg">
    <ImageView
        android:id="@+id/iv_gallery_item_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/image_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="24dp"
        android:transitionName="sharedView"/>
    <LinearLayout
        android:id="@+id/ll_item_time"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_gallery_item_day"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_gallery_item_month"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_my_collection"
        android:layout_width="60dp"
        android:layout_height="72dp"
        android:src="@drawable/collection_true"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>